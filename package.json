{
  "name": "nba-stats",
  "version": "1.0.0",
  "description": "A Visualisation f the NBA published statistics",
  "author": "Ian Anderson",
  "scripts": {
    "lint": "tslint --project tsconfig.json -c tslint.json",
    "build": "webpack --config webpack.config.ts",
    "serve": "NODE_ENV=development webpack-dev-server --config webpack.config.ts",
    "test": "jest \\.spec.tsx?$",
    "test-features": "jest feature$",
    "_deploy": "firebase deploy --token=$FIREBASE_DEPLOY_TOKEN",
    "deploy": "npm-run-all -s build _deploy"
  },
  "devDependencies": {
    "@types/d3": "^4.12.0",
    "@types/enzyme": "^3.1.8",
    "@types/enzyme-adapter-react-16": "^1.0.1",
    "@types/html-webpack-plugin": "^2.30.1",
    "@types/i18next": "^8.4.3",
    "@types/jest": "^22.0.1",
    "@types/react": "^16.0.34",
    "@types/react-dom": "^16.0.3",
    "@types/react-hot-loader": "^3.0.5",
    "@types/react-redux": "^5.0.14",
    "@types/react-router-dom": "^4.2.3",
    "@types/react-test-renderer": "^16.0.0",
    "@types/redux-mock-store": "^0.0.13",
    "@types/webpack": "^3.8.2",
    "awesome-typescript-loader": "^3.4.1",
    "clean-webpack-plugin": "^0.1.17",
    "copy-webpack-plugin": "^4.3.1",
    "css-loader": "^0.28.9",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "firebase-tools": "^3.16.0",
    "gherkin-jest": "^0.17.0",
    "html-webpack-plugin": "^2.30.1",
    "jest": "^22.1.1",
    "npm-run-all": "^4.1.2",
    "path": "^0.12.7",
    "react-test-renderer": "^16.2.0",
    "redux-mock-store": "^1.4.0",
    "source-map-loader": "^0.2.3",
    "standard-version": "^4.3.0",
    "standardts": "^1.0.0",
    "style-loader": "^0.19.1",
    "ts-jest": "^22.0.1",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "tslint-config-standard": "^7.0.0",
    "tslint-react": "^3.4.0",
    "tslint-sonarts": "^1.4.0",
    "typescript": "^2.6.2",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.10.1",
    "workbox-webpack-plugin": "^3.0.0-beta.0",
    "worker-loader": "^1.1.0"
  },
  "dependencies": {
    "d3": "^4.13.0",
    "i18next": "^10.3.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-hot-loader": "^3.1.3",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "redux": "^3.7.2",
    "redux-observable": "^0.17.0",
    "rxjs": "^5.5.6"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/test-configuration/setup-tests.ts",
    "setupFiles": [
      "<rootDir>/test-configuration/gherkin-support.ts"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      "^.+\\.feature$": "gherkin-jest"
    },
    "testRegex": "((/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$|\\.feature$)",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node",
      "feature"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleNameMapper": {
      "\\.(css|jpg|jpeg|png|gif|svg)": "<rootDir>/src/__mocks__/__file_mock__.ts"
    }
  }
}
